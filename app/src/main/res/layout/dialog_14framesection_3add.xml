<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="325dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/dialogBackground"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:padding="7dp"
        android:text="Frame Section"
        android:textColor="@color/colorTextBlack"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorPrimaryDark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Code:"
                android:textColor="@color/colorTextBlack" />

            <EditText
                android:id="@+id/txtSectionCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="3"
                android:gravity="center_horizontal"
                android:hint="K1"
                android:inputType="textPersonName"
                android:text="K1"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Section name:"
                android:textColor="@color/colorTextBlack" />

            <EditText
                android:id="@+id/txtSectionName"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Column 1"
                android:inputType="textPersonName"
                android:text="Column 1"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="10dp"
        android:text="Section Properties"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinProfile"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:dropDownWidth="120dp"
            android:popupBackground="@color/dialogBackground" />

        <Spinner
            android:id="@+id/spinType"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:dropDownWidth="150dp"
            android:isScrollContainer="true"
            android:overScrollMode="always"
            android:popupBackground="@color/dialogBackground"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="4dp">

        <CheckBox
            android:id="@+id/chkAlpha"
            android:layout_width="18dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
            android:text="Rotate local x by 90 degree  (alpha)"
            android:textColor="@color/colorTextBlack"
            android:textDirection="rtl" />

        <ImageView
            android:id="@+id/helpAlpha"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_dialog_help" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="B (mm):"
                android:textColor="@color/colorTextBlack" />

            <TextView
                android:id="@+id/txtB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="depth"
                android:textAlignment="center"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="H (mm):"
                android:textColor="@color/colorTextBlack" />

            <TextView
                android:id="@+id/txtH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="height"
                android:textAlignment="center"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="tw (mm):"
                android:textColor="@color/colorTextBlack" />

            <TextView
                android:id="@+id/txtT1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="web thickness"
                android:textAlignment="center"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="tf (mm):"
                android:textColor="@color/colorTextBlack" />

            <TextView
                android:id="@+id/txtT2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="7"
                android:hint="flange thickness"
                android:textAlignment="center"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOKFS"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:background="@color/buttonBackground"
            android:gravity="center"
            android:text="OK"
            android:textColor="@color/buttonText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelFS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@color/buttonBackground"
            android:gravity="center"
            android:text="cancel"
            android:textColor="@color/buttonText"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>