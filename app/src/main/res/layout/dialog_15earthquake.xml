<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="400dp"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/dialogBackground">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:paddingTop="7dp"
        android:text="Earthquake"
        android:textColor="@color/colorTextBlack"
        android:textSize="25sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="7dp"
        android:gravity="center"
        android:text="Static Equivalent"
        android:textColor="@color/colorTextBlack" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorLine"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="0dp"/>

    <RadioGroup
        android:id="@+id/rgEarthQuake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <RadioButton
            android:id="@+id/rbtnNoneEQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="20dp"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:text="None" />

        <RadioButton
            android:id="@+id/rbtnXEQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:text="X-Axis" />

        <RadioButton
            android:id="@+id/rbtnYEQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:textColor="@color/colorTextBlack"
            android:text="Y-Axis" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/layoutXDirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="X earthquake direction :  "
            android:textColor="@color/colorTextBlack" />

        <Switch
            android:id="@+id/switchXDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="-  "
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="+"
            android:textColor="@color/colorTextBlack"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutYDirection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Y earthquake direction :  "
            android:textColor="@color/colorTextBlack" />

        <Switch
            android:id="@+id/switchYDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="-  "
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="+"
            android:textColor="@color/colorTextBlack"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="Ss :"
                android:textColor="@color/colorTextBlack" />

            <EditText
                android:id="@+id/txtSs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:enabled="false"
                android:hint="Ss"
                android:inputType="numberDecimal"
                android:text="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="S1 :"
                android:textColor="@color/colorTextBlack" />

            <EditText
                android:id="@+id/txtS1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:enabled="false"
                android:hint="S1"
                android:inputType="numberDecimal"
                android:text="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="Ie :"
                android:textColor="@color/colorTextBlack" />

            <EditText
                android:id="@+id/txtIe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:enabled="false"
                android:hint="Ie"
                android:inputType="numberDecimal"
                android:text="1"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:text="R :"
                android:textColor="@color/colorTextBlack" />

            <EditText
                android:id="@+id/txtR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"
                android:enabled="false"
                android:hint="R"
                android:inputType="numberDecimal"
                android:text="8"
                android:textAlignment="viewEnd"
                android:textColor="@color/colorTextBlack"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site :"
            android:textColor="@color/colorTextBlack" />

        <Spinner
            android:id="@+id/spinSitus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnOKEarthQuake"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:background="@color/buttonBackground"
            android:gravity="center"
            android:text="ok"
            android:textColor="@color/buttonText"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelEarthQuake"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:background="@color/buttonBackground"
            android:gravity="center"
            android:text="cancel"
            android:textColor="@color/buttonText"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>